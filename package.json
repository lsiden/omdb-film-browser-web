{
  "name": "ra",
  "version": "1.0.0",
  "license": "GFDL-1.3",
  "xhomepage": "https://lsiden.github.io/omdb-viewer",
  "homepage": "./",
  "repository": "https://github.com/lsiden/omdb-viewer",
  "main": "main.js",
  "author": {
    "name": "Lawrence Siden",
    "email": "lsiden@gmail.com",
    "url": "https://github.com/lsiden"
  },
  "scripts": {
    "electron": "electron .",
    "electron:dev": "nf start",
    "electron:package":
      "electron-packager . omdb-viewer --out=dist/linux --platform=linux --arch=x64",
    "start": "NODE_PATH=src react-scripts start",
    "build": "NODE_PATH=src react-scripts build",
    "test": "NODE_PATH=src react-scripts test --env=jsdom --verbose",
    "eject": "react-scripts eject",
    "lint": "eslint src/",
    "lint:fix": "npm run lint -- --fix",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "prettier": "prettier --write src/*.js src/**/*.js"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cuid": "^2.1.0",
    "debug": "^3.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "react-scripts": "1.1.1",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "toastr": "^2.1.4"
  },
  "devDependencies": {
    "ajv": "^6.2.1",
    "electron": "^1.8.3",
    "electron-packager": "^11.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.2",
    "eslint-plugin-jest": "^21.13.0",
    "foreman": "^2.0.0",
    "gh-pages": "^1.1.0",
    "prettier": "^1.11.1",
    "prettier-eslint": "^8.8.1",
    "supports-color": "^5.3.0"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": ["react-app"],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "varsIgnorePattern": "^debug$"
        }
      ]
    }
  }
}
